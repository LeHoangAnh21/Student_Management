{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container col-md-6 mt-3">
	<h3 class="text-success text-center">Category List</h3>
	<a class="btn btn-outline-success mt-2" href="{{ path('category_add') }}">Add Category</a>
    <table class="table table-striped text-center mt-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categorys %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>
                        <a class="text-info" href="{{ path('category_detail', {'id': category.id}) }}">
                            {{ category.name }}
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-info" href="{{ path('category_edit', {'id': category.id}) }}">EDIT</a>
                        <a class="btn btn-warning" href="{{ path('category_delete', {'id': category.id}) }}" 
                        onclick="return confirm('Are you sure to delete this category ?')">DELETE</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}