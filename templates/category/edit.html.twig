{% extends "base.html.twig" %}

{% block title %} Add Major {% endblock %}

{% block body %}

<div class="container-fluid">
   <h3 class="text-center mt-5">Update The Major</h3>
      {{ form_start(form) }}
         <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         
         <div class="form-group text-center mt-3 mb-4">
            <button class="btn btn-primary" type="submit">Update Major Now</button>
         </div>
      {{ form_end(form) }}
</div>
{% endblock %}