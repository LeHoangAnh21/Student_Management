<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>

		<title>
			{% block title %}
				Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<!-- Font Awesome -->
			<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"/>
			<!-- Google Fonts -->
			<link
			href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
			<!-- MDB -->
			<link
			href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet"/>
			{# Long CSS #}
			<link rel="stylesheet" href="{{ asset('../longcss/home.css') }}"/>
		{% endblock %}

		{% block javascripts %}
			<!-- MDB -->
			<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
		{% endblock %}
	</head>
	<body>
		{% block header %}{% endblock %}
		{% block sidebar %}
			<div
				class="d-flex bg-light height">
				<!-- Sidebar-->
				<div class="border-end bg-light" id="sidebar-wrapper">
					<div class="sidebar-heading border-bottom text-info">
						FPT.co
					</div>
					<div class="btn-group dropend list-group list-group-flush">
						<a class="list-group-item list-group-item-action bg-light text-info  p-3" href="{{ path('homepage')}}">
							Home
						</a>
						<a class="list-group-item list-group-item-action bg-light text-info p-3" href="#!">
							Category
						</a>
						<button type="button" class="list-group-item list-group-item-action bg-light text-info p-3" data-mdb-toggle="dropdown" aria-expanded="false">
							Class
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item list-group-item list-group-item-action bg-light text-info op-3" href=" {{ path('classroom_index')}} ">Class List</a>
							</li>
							<li>
								<a class="dropdown-item list-group-item list-group-item-action bg-light text-info op-3" href="#">Add Class</a>
							</li>
						</ul>
						<a class="list-group-item list-group-item-action bg-light text-info p-3" href="#!">
							Course
						</a>
						<a class="list-group-item list-group-item-action bg-light text-info p-3" href="#!">
							Student
						</a>
						<a class="list-group-item list-group-item-action bg-light text-info p-3" href="#!">
							Teacher
						</a>
					</div>
				</div>
				{% block body %}{% endblock %}
			</div>
		{% endblock %}
		{# {% block footer %}
			<!-- Footer -->
			<hr>
			<footer class="py-4  mt-auto">
				<div class="container-fluid px-4">
					<div class="d-flex align-items-center justify-content-between small">
						<div class="text-muted">
							Copyright &copy; Your Website 2021
						</div>
						<div>
							<a href="#">Privacy Policy</a>
							&middot;
							<a href="#">Terms &amp; Conditions</a>
						</div>
					</div>
				</div>
			</footer>
		{% endblock %} #}
		<div class="container mt-3 text-center col-md-5">
			{% for message in app.flashes('Success') %}
				<p class="alert alert-success"> {{ message }}
				</p>
			{% endfor %}
			{% for message in app.flashes('Error') %}
				<p class="alert alert-danger"> {{ message }}
				</p>
			{% endfor %}
		</div>
	</body>
</html>
