{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center">Student List</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('student_add') }}">Add Student</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Image</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for student in students %}
					<tr>
						<td>{{ student.id }}</td>
						<td>
							<a class="text-info" href="{{ path('student_detail', {'id': student.id}) }}">
								{{ student.name }}
							</a>
						</td>
						<td>
							<a href="{{ path('student_detail', {'id': student.id}) }}">
								<img src="{{ asset('images/student/'~student.image )}}" alt="avatar" width="100" height="120">
							</a>
						</td>
						<td>
							<a class="btn btn-info" href="{{ path('student_edit', {'id': student.id}) }}">EDIT</a>
							<a class="btn btn-warning" href="{{ path('student_delete', {'id': student.id}) }}" 
							onclick="return confirm('Are you sure to delete this student ?')">DELETE</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}