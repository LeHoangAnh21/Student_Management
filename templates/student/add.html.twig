{% extends "base.html.twig" %}

{% block title %} Add Student {% endblock %}
{# avc #}
{% block body %}
<div class="container-fluid col-8 mt-3">
   <h3 class="text-center mt-5">ADD NEW STUDENT</h3>
      {{ form_start(form) }}
         <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.publisher) }}
            {{ form_widget(form.publisher,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.quantity) }}
            {{ form_widget(form.quantity,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.cover) }}
            {{ form_widget(form.cover,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.author) }}
            {{ form_widget(form.author,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group text-center mt-3 mb-4">
            <button class="btn btn-primary" type="submit">ADD</button>
         </div>
      {{ form_end(form) }}
</div>
{% endblock %}