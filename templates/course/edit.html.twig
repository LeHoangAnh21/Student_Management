{% extends 'base.html.twig' %}

{% block title %} UPDATE COURSE{% endblock %}

{% block body %}

	<div class="auth-form">
		<h3 class="text-center mt-5">UPDATE NEW COURSE</h3>
      {{ form_start(form) }}
         <div class="auth-form__input">
            {{ form_label(form.title) }}
            {{ form_widget(form.title,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>

        <div class="auth-form__input">
            {{ form_label(form.date) }}
            {{ form_widget(form.date,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
        </div>

        <div class="auth-form__input">
            {{ form_label(form.teacher) }}
            {{ form_widget(form.teacher,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
        </div>

        <div class="auth-form__input">
            {{ form_label(form.category) }}
            {{ form_widget(form.category,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
        </div>

        <div class="auth-form__controls">
            <button class="btn btn--primary" style="font-size: 1.5rem; color: white; background-color: #fb5330; padding: 0;" type="submit">UPDATE</button>
        </div>
      {{ form_end(form) }}
	</div>

{% endblock %}