{% extends 'base.html.twig' %}

{% block title %} LIST COURSE {% endblock %}

{% block body %}
<div class="container col-md-6 mt-3">
    <h3 class="text-success text-center">COURSE LIST</h3>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-outline-success mt-2" href="{{ path('course_add') }}">ADD COURSE</a>
    {% endif %}
    <table class="table table-striped text-center mt-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>COURSE TITLE</th>
                {% if is_granted('ROLE_ADMIN') %}
                <th>OPTION</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for course in courses %}
                <tr>
                    <td>{{ course.id }}</td>
                    <td>
                        <a href="{{ path('course_detail', {'id': course.id}) }}" style="font-weight:bolder; font-style: italic;">
                            {{ course.title }}
                        </a>
                    </td>
                    {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a class="btn btn-outline-success mt-2" href="{{ path('course_delete', {'id': course.id}) }}" onclick="return confirm('Are you sure to delete?')" style="margin: 50px">DELETE COURSE</a>
                    </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
