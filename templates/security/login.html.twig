{% extends 'base.html.twig' %}

{% block title %} Login {% endblock %}

{% block header %}

<div class="conatiner" style="margin: 30px 300px;">

    <div class="header__search-input-wrap">
        <h1> LOGIN </h1>
    </div>

    <div class="auth-form__header">
        <a style="color: black; font-style: italic;" href="{{path('app_register')}}">Don't have an account yet? Please register.</a>
    </div>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="auth-form__form">
            <div class="auth-form__group">
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" 
                    style="width: 100%; height: 50px; padding: 0 12px; font-size: 1rem; font-weight: bolder; border: 1px solid #dbdbdb; border-radius: 5px; display: flex; align-items: center; margin: 30px 0 40px" 
                    placeholder="Username..." style="height: 50px" autocomplete="username" required autofocus>
            </div>

            <div class="auth-form__group">
                <input type="password" name="password" id="inputPassword" 
                    style="width: 100%; height: 50px; padding: 0 12px; font-size: 1rem; font-weight: bolder; 
                    border: 1px solid #dbdbdb; border-radius: 5px; display: flex; align-items: center; height: 50px" 
                    placeholder="Password..." style="height: 50px" autocomplete="current-password" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <div class="auth-form__controls">
            <button class="btn" style="background-color: #fb5330; color: white;" type="submit">LOGIN</button>
        </div>
    </form>

</div> 

{% endblock %}

{% block sidebar %}{% endblock %}

{% block footer %}{% endblock %}
