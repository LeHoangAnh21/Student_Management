{% extends 'base.html.twig' %}

{% block title %} TEACHER DETAIL {% endblock %}


{% block body %}

<nav class="container">
	<a class="btn btn-outline-success mt-2" href="{{ path('teacher_edit', {'id': teacher.id}) }}" style="margin: 50px">UPDATE TEACHER</a>
